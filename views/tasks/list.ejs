<%- include('../partials/header') %>

  <body>
    <div id="wrapper">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-header">مدیریت وظایف</div>
              <div class="card-body">
                <div class="actions">
                  <a href="/tasks/add" class="btn btn-outline-success btn-icon">
                    <i class="material-icons"> note_add </i>
                    <span>اضافه کردن</span>
                  </a>
                  <a href="/" class="btn btn-outline-primary btn-icon">
                    <i class="material-icons"> list </i>
                    <span>لیست وظایف</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-header">لیست وظایف</div>
              <div class="card-body">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>عنوان</th>
                      <th>دسته بندی</th>
                      <th>انجام دهنده</th>
                      <th>وضعیت</th>
                      <th>عملیات</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>عنوان</th>
                      <th>دسته بندی</th>
                      <th>انجام دهنده</th>
                      <th>وضعیت</th>
                      <th>عملیات</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% tasks.forEach(function(task){ %> <%- include('./item',
                    {task: task}); %> <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="./assets/js/bootstrap.min.js"></script>
  </body>
</html>
